# SanaPath AI Backend Environment Variables
# Copy this file to .env and fill in your values

# ============ AI Configuration ============
# Choose your AI provider: "openai", "anthropic", or "gemini"
AI_PROVIDER=gemini

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=

# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=

# Set to "true" for demo mode (no AI API needed), "false" to use real AI
AI_DEMO_MODE=true

# ============ Database ============
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./sanapath.db

# PostgreSQL (for production - Railway provides this)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# ============ Security ============
# Generate a strong secret key for JWT tokens
# In production, use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============ OAuth Credentials ============
# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth (https://www.linkedin.com/developers/apps)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============ URLs ============
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Additional CORS origins (comma-separated)
CORS_ORIGINS=

# ============ Mode ============
DEMO_MODE=true
ENVIRONMENT=development
